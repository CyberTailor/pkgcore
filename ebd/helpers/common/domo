#!/usr/bin/env pkgcore-ebuild-helper
# Copyright: 2011 Brian Harring <ferringb@gmail.com>
# License: GPL2/BSD 3 clause

check_args 1 -

for x in "$@"; do
	[[ -e ${x} ]] || error "'${x}' does not exist"
	basename=${x##*/}
	dir=${ED}${DESTTREE}/share/locale/${basename%.*}/LC_MESSAGES
	check_command install -m0644 -D -- "${x}" "${dir}/${PN}.mo"
done
